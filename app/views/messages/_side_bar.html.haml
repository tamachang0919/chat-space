.side_bar
  .side_bar__header
    .side_bar__header__user
      .side_bar__header__user__name
        = current_user.name
      .side_bar__header__user__icon
        .icon1
          = link_to new_group_path do
            = icon('far', 'edit')
        .icon2
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')
  .side_bar__groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .side_bar__groups__member
            techcamp
          .side_bar__groups__message
            = group.show_last_message